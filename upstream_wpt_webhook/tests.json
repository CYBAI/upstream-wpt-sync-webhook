[
    {
        "name": "open new upstreamable PR",
        "payload": "new_pr.json",
        "db": {},
        "expected": [
            "FetchUpstreamableStep",
            "UpstreamStep",
            "OpenUpstreamStep",
            "CommentStep"
        ]
    },
    {
        "name": "open existing upstreamable PR",
        "payload": "new_pr.json",
        "db": {"18746": "http://foo.bar"},
        "expected": [
            "FetchUpstreamableStep",
            "UpstreamStep",
            "ChangeUpstreamStep"
        ]
    },
    {
        "name": "open existing non-upstreamable PR",
        "payload": "new_pr.json",
        "diff": "non-wpt.diff",
        "db": {"18746": "http://foo.bar"},
        "expected": [
            "ChangeUpstreamStep"
        ]
    },
    {
        "name": "close non-upstreamable PR",
        "payload": "close_pr.json",
        "db": {},
        "expected": []
    },
    {
        "name": "close upstreamable PR",
        "payload": "close_pr.json",
        "db": {"18746": "http://foo.bar"},
        "expected": [
            "ChangeUpstreamStep"
        ]
    }
]
